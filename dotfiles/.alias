#!/usr/bin/env bash
# Customs aliases
# alias list='echo "tree, scan, clock, ttop, nscan, mkcd, mkex, ip, kitty, doit, checkit"'
alias scan="pwd && ls -lha"
alias clock='while true; do; clear; date; sleep 1; done'
alias ttop='top -ocpu -R -F -s 2 -n30'
# Airport CLI alias
alias airport='/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport'
# -------------------------------------------------------------------
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ls='ls -lha'
# -------------------------------------------------------------------
function vbc {
	open ${@:-.} -a Visual\ Studio\ Code;
}
function sub {
	open ${@:-.} -a Sublime\ Text;
}

function mkcd {
	dir="$*";
	mkdir -p "$dir" && cd "$dir";
}
function mkex {
	for i in {00..${@:-5}} ; do; mkdir -v "ex$i" ; done
}
ip () {
# determine local IP address
	ifconfig | grep "inet " | awk '{ print $2 }'
}
function nscan {
	STARTTIME=$(date +%s)
	subnet=$(ifconfig | grep "inet " | cut -d ' ' -f 2 | sed '1d' | cut -d '.' -f 1-3)
	for ip in $(seq 1 ${@:-254}); do; (ping -c 1 -W 5 $subnet.$ip >/dev/null && echo "$subnet.$ip UP"); done
	ENDTIME=$(date +%s)
	echo "It takes $(($ENDTIME - $STARTTIME)) seconds to complete this task..."
}
function tree {
	find . -type d -maxdepth ${@:-2} | sed -e "s/[^-][^\/]*\//  |/g" -e "s/|\([^ ]\)/|-\1/"
}
